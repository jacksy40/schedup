
<div id="home_div">
  <div class="home_img">
    <%= image_tag('http://i.huffpost.com/gen/1618592/images/o-HAPPY-PEOPLE-facebook.jpg') %>
  </div>
</div>

  <div class="events" >
    <h4>Events</h4>
      <%if @events %>
        <% @events.each do |event| %>
          <fieldset class="event_feildset">
            <legend><%= event.user.username %></legend>
              <div class="event_detail">
                <%= event.task.tasks %>
                <%= event.task.task_time.strftime("%I:%M%p") %>
                <%= event.task.task_date.strftime("%m-%d-%Y") %>
                <%= event.task.location %>
              </div>
              <div class="event_links"><%= link_to "look @", event_path(event) %></div>
          </fieldset>
        <% end %>
      <% end %>
  </div>

