
    <h2>I have...</h2>
    <h4>Click the time you want removed from your availibilty.</h4>
  <div class='mdiv1'>
    <% if @avail_hours.any? %>
    <ul class='avail_item_list'>
        <% @avail_hours.each do |hour| %>
          <li><%= link_to hour.avail_time,
          '/availabilities/' + hour.to_param, method: :delete %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class='mdiv2'>
      <%= form_for @time do |h| %>
        <ul><%= h.label :Date %>
        <%= h.text_field :avail_date, :id => "datepicker" %></ul>
        <ul><%= h.label :Time %>
        <%= h.text_field :avail_time %></ul>
        <ul><%= h.submit "Add hours" %></ul>
      <% end %>
      <ul><%= form_for @time, url:"/availabilities", :method => :delete do |q| %>
      <%= q.submit "Reset" %>
      <% end %></ul>
  </div>
