
<div class="login">
  <div class="row">
    <div class="large-3 columns">
      <% flash.each do |key, value| %>
          <li class="flash flash-<%= key %>">
            <%= value %>
          </li>
        <% end %>
    </div>
      <div class="large-6 columns">
          <div id='oauth'>
            <fieldset>
            <h2 class='login_label'>log in</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <ul>
                  <%= f.email_field :email, autofocus: true, placeholder: "email" %></ul>
                  <ul>
                    <%= f.password_field :password, autocomplete: "off",placeholder: "password" %></ul>
                    <% if devise_mapping.rememberable? -%>
                    <ul><%= f.check_box :remember_me %>
                    <%= f.label :remember_me %></ul>
                    <% end -%>
                  <ul class='links'><%= f.submit "log in" %></ul>
                <% end %>
                </fieldset>
                  <ul><%= render "devise/shared/links" %></ul>
          </div>
      </div>
    <div class="large-3 columns">
    </div>
  </div>
</div>
