
<div id="home_div">
  <div class="home_img">
    <%= image_tag('http://i.huffpost.com/gen/1618592/images/o-HAPPY-PEOPLE-facebook.jpg') %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns username">
    <li><a><% if current_user.present? %>
      <span>Welcome, <%= current_user.username %></span>
    <% end %></a></li>
  </div>

  <div class="notification">
    <% flash.each do |key, value| %>
       <li class="flash flash-<%= key %>">
         <%= value %>
      </li>
    <% end %>
  </div>
</div>

<div class="events" >
    <%if @events %>
      <% @events.each do |event| %>
      <div class="event_detail">
          <fieldset class="event_feildset">
            <legend><%= event.user.username %></legend>
              <div class="event_text">
                <h5><strong><%= event.task.tasks %></strong></h5>
                <li><%= event.task.location %></li>
                <li><%= event.task.task_date.strftime("%m-%d-%Y") %></li>
                <li><%= event.task.task_time.strftime("%I:%M%p") %></li>
              </div>

              <div class="event_links">
                <% if current_user.id == event.user.id %>
                  <li><%= link_to "cancel", event_path(event), method: :delete %><span style="color: #fff;"> |</span></li>
                <% end %>
                <li><%= link_to "look @", event_path(event) %></li>
              </div>
        </fieldset>
      </div>
      <% end %>
    <% end %>
</div>

<div class="task_footer">
</div>

