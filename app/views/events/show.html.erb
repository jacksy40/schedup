<div class="row">
    <div class="small-11 small-centered large-centered event_div columns">
      <div class="event_div panel">
        <h3><%= @event.task.tasks %></h3>
          <ul><%= @event.user.username %></ul>
            <ul><%= @event.task.task_time.strftime("%I:%M%p") %></ul>
              <ul><%= @event.task.task_date %></ul>
            <ul><%= @event.task.location %></ul>
          <ul><%= @event.task.note %></ul>
      </div>
    </div>
  </div>
</div>

  <div class="event_title"><p>Detail of this event.</p></div>
<div class="row event_div_1">
  <div class="small-11 small-centered columns">
    <div id="map-canvas" class="small-12 small-centered columns" style="width: 55em; height: 20em;">
    </div>
  </div>
</div>


  <div class="row event_div_2">
     <div class="small-11 small-centered columns">
        <div class="panel">
          <h3>Who's coming?</h3>
            <div class="event_attendees">
              <% if @event %>
                <% @event.attendees.each do |attendee| %>
                  <span>@<%= attendee.user.username %></span>
                <% end %>
              <% end %>
            </div>
          <div class="event_control">
            <li>_____________________________</li>
              <% if joined? %>
                <ul><%= link_to "withdraw", attendee_path(@event), method: :delete  %></ul>
              <% else %>
                <ul><%= link_to "join", attendees_path(@event), method: :post  %></ul>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="row">
  <div class="small-11 small-centered columns event_div_3">
    <div class="panel">
      <h3>Chatter!</h3>
        <div class="small-10 small-centered columns panel event_chatter">
            <% if @display_message %>
              <% @display_message.each do |message| %>
                <li><%= message.user.username %>:</li>
                <li style="color: #FF6633;"><%= message.message %></li>
              <% end %>
            <% end %>
        </div>
      <div class="small-10 small-centered columns event_control">
        <%= form_for [ @event, @message ] do |h| %>
          <ul><%= h.text_field :message %></ul>
          <ul><%= h. submit "message" %></ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
